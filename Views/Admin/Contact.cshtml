@model VisiTrack.Models.Contact
 
@{
    ViewData["Title"] = "Contact Us";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-info">📞 Contact Us</h3>
    <a asp-action="Dashboard" class="btn btn-sm btn-outline-primary">Back to Dashboard</a>
</div>
<hr style="margin-top:17px; margin-bottom:17px;" />

<div class="card bg-light p-4 shadow-lg">
    <p class="text-muted">
        Have a question, suggestion, or issue with <strong>VisiTrack</strong>?
        Fill out the form below and we'll get back to you as soon as possible.
    </p>

    <form asp-controller="Admin" asp-action="Contact" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" maxlength="50" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control"  />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Subject" class="form-label"></label>
            <input asp-for="Subject" class="form-control" maxlength="100" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Message" class="form-label"></label>
            <input asp-for="Message" class="form-control" maxlength="500" />
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                Send Message
            </button>
        </div>
    </form>
</div>

<div class="mt-5">
    <h5 class="text-secondary">Other Ways to Reach Us</h5>
    <ul class="list-unstyled">
        <li>📍 Address: 123 Office Park, City, Country</li>
        <li>📧 Email: support@visitrack.com</li>
        <li>📞 Phone: +91 98765 43210</li>
    </ul>
</div>
