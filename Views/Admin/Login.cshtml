
@{
    ViewData["Title"] = "Login page";
}

<div class="d-flex p-3 justify-content-center align-items-center bg-light" style="max-height:80vh; padding-top:75px;">
    <div class="card shadow-lg p-4 pt-2" style="max-width: 400px; width: 70%; max-height:420px;">
        <div class="text-center mb-3">
            <img src="~/images/logo.jpg" class="img-fluid" style="max-width: 190px;" alt="Logo" />
            <h4>Welcome Back</h4>
            <p class="text-muted small">Please login to your account</p>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label  class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Enter your email" />
                <span  class="text-danger small"></span>
            </div>

            <div class="mb-3 position-relative">
                <label  class="form-label">Password</label>
                <input  class="form-control" placeholder="Enter your password" type="password" />
                <span  class="text-danger small"></span>
            </div>

            <button type="submit" class="btn mt-1 btn-primary w-100 ">Login</button>

            <div class="text-center mt-1">
                <span class="small">Don't have an account? </span>
                <a href="/Account/Register" class="small text-decoration-none">Sign up</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
