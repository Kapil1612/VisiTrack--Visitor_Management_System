@model VisiTrack.Models.ViewModel.HostIndexViewModel  

@{  
    ViewData["Title"] = "Host page";  
}  

<h3 class="mb-3">Add New Host</h3>

<hr />  

<div class="row">  
<div class="card shadow bg-light col-6">  
<form asp-action="Create" method="post">  
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>  

    <div class="mb-3 mt-2 row">  
        <label asp-for="NewHost.FirstName" class="col-sm-4 col-form-label"></label>  
        <div class="col-sm-8">  
                <input asp-for="NewHost.FirstName" class="form-control" />  
                <span asp-validation-for="NewHost.FirstName" class="text-danger"></span>  
        </div>  
    </div>  

    <div class="mb-3 row">  
            <label asp-for="NewHost.LastName" class="col-sm-4 col-form-label"></label>  
        <div class="col-sm-8">  
                <input asp-for="NewHost.LastName" class="form-control" />  
                <span asp-validation-for="NewHost.LastName" class="text-danger"></span>  
        </div>  
    </div>  

    <div class="mb-3 row">  
            <label asp-for="NewHost.Department" class="col-sm-4 col-form-label"></label>  
        <div class="col-sm-8">  
                <input asp-for="NewHost.Department" class="form-control" />  
                <span asp-validation-for="NewHost.Department" class="text-danger"></span>  
        </div>  
    </div>  

    <div class="mb-3 row">  
            <label asp-for="NewHost.ContactNumber" class="col-sm-4 col-form-label"></label>  
        <div class="col-sm-8">  
                <input asp-for="NewHost.ContactNumber" class="form-control" />  
                <span asp-validation-for="NewHost.ContactNumber" class="text-danger"></span>  
        </div>  
    </div>  

    <div class="mb-2 row ">  
        <div class="offset-sm-4 col-sm-8">  
            <input type="submit" value="Add" class="btn btn-primary w-100" />  
        </div>  
    </div>  
</form>  
</div>  
</div>  

<hr />  

<h3 class="mb-2">Hosts Record</h3>  

<div>  
<table class="table table-striped table-hover shadow table-bordered">  
    <thead>  
        <tr>  
                <th class="align-middle">  
                    Host Name  
                </th>  
                <th class="align-middle">  
                    @Html.DisplayNameFor(model => model.NewHost.Department)  
                </th>  
                <th class="align-middle">  
                    @Html.DisplayNameFor(model => model.NewHost.ContactNumber)  
                </th>  
                <th class="align-middle"></th>  
        </tr>  
    </thead>  
    <tbody>  
@if (Model.HostList != null) {  
    foreach (var item in Model.HostList) {  
        <tr>  
                    <td class="align-middle">  
               @($"{item.FirstName} {item.LastName}")  
            </td>  
                    <td class="align-middle">  
                @Html.DisplayFor(modelItem => item.Department)  
            </td>  
                    <td class="align-middle">  
                @Html.DisplayFor(modelItem => item.ContactNumber)  
            </td>  
                    <td class=" align-middle text-end">  
                        <a class="btn btn-sm btn-primary me-2 " asp-action="Edit" asp-route-id="@item.HostID">Edit</a>  
                        <a class="btn btn-sm btn-primary me-2 " asp-action="Details" asp-route-id="@item.HostID">Details</a>  
                        <a class="btn btn-sm btn-primary me-2 " asp-action="Delete" asp-route-id="@item.HostID">Delete</a>  
            </td>  
        </tr>  
    }  
}  
    </tbody>  
</table>  
</div>  

@section Scripts {  
    @{  
        await Html.RenderPartialAsync("_ValidationScriptsPartial");  
    }  
}
